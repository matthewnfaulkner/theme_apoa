<footer id="page-footer" class="footer-popover bg-primary text-white" style="z-index:2">
    {{{ output.view_on_mobile }}}
    <div class="container py-4 py-lg-5">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-3 text-center text-lg-left d-flex flex-column">
                
                <h3 class="font-weight-bold" style="font-size: 1rem;">Contact and Location</h3>
                {{{output.footer_contact_info}}}
                {{# output.has_popover_links }}
                    <div class="footer-section p-3 border-bottom">
                        {{# output.supportemail }}
                            <div class="footer-support-link">{{{ output.supportemail }}}</div>
                        {{/ output.supportemail }}
                    </div>
                {{/ output.has_popover_links }}
            </div>
            <div class="col-12  col-lg-3 text-center text-lg-left d-flex flex-column">
                <h3 class="font-weight-bold" style="font-size: 1rem;">Quick Links</h3>
                <ul class="list-unstyled m-0">
                {{#output.footer_quick_links}}
                    <li><a class="text-white" href="{{quicklink}}">{{{quickname}}}</a></li>
                {{/output.footer_quick_links}}
                </ul>
            </div>
            <div class="col-12 col-lg-6 text-center text-lg-left d-flex flex-column order-first order-lg-last">
                <div class="footer-section p-3 border-bottom">
                        <div class="logininfo">
                            {{{ output.login_info }}}
                        </div>
                        <div class="tool_usertours-resettourcontainer">
                        </div>

                        {{{ output.standard_footer_html }}}
                        {{{ output.standard_end_of_body_html }}}
                    </div>
                    <div class="footer-section p-3">
                        <div>{{#str}}poweredbymoodle, core{{/str}}</div>
                        <div>Managed by APOA Events</div>
                        {{#output.moodle_release}}
                            <div>
                                {{#str}}version, core{{/str}} {{{ output.moodle_release }}}
                            </div>
                        {{/output.moodle_release}}
                    </div>
            </div>
        </div>
        <hr>
        <div class="row d-flex justify-content-between pt-3" style="background: var(--bs-gray-100);">
            <div class="col-12 col-sm-10 pb-2">
                <p class="mb-0">Copyright Â© 2023 {{sitenamefull}}</p>
            </div>
            <div class="col-12 col-sm-2">
                <ul class="list-inline text-white-50 mb-0">
                    {{#output.footer_socialmedia}}
                        <li class="list-inline-item"><a href="{{sociallink}}">{{{socialpath}}}</a></li>
                    {{/output.footer_socialmedia}}
                
                </ul>
            </div>
        </div>
    </div>
    <div class="footer-content-debugging footer-dark bg-dark text-light">
        <div class="container-fluid footer-dark-inner">
            {{{ output.debug_footer_html }}}
        </div>
    </div>

</footer>

