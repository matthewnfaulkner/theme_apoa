<div id="jumbomodal" class="w-100  hide" style="position: absolute;overflow: hidden; z-index: 6">
    <div class="simple-slider" style="/*height: 100%;*/">
        <div class="swiper-container" style="/*height: 100%;*/">
            <div class="swiper-wrapper">
                {{#blocks}}
                    {{#indexes}}
                    <div id="slide-{{index}}" class="swiper-slide" style="height: 100%;" data-src="" data-control-id="{{index}}">
                        <a class="stretched-link main-page-link-wrapper" href=""></a>
                        <div class="card main-page-jumbo-main w-100 border-0">
                            <img class="card-img w-100 d-block main-page-main-image rounded-0 zoom-enabled" style="filter:brightness(0.93); object-fit:contain; object-position:center; background-color: var(--primary); height:100%;" src="#" data-bound="false"/>
                        </div>
                    </div>
                    {{/indexes}}
                {{/blocks}}
            </div>
            <svg id="closemodal" class="bi bi-x-circle float-right position-absolute m-2" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" style="top: 0;right: 0;color: rgb(255,255,255);z-index: 10;height: 40px;width: 40px;">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"></path>
            </svg>
        </div>
    </div>
</div>
{{#js}}
    require(['theme_apoa/simple-image-zoom'], function(Zoom) {
    Zoom.expand({ 
        zoomMaxWidth: 'initial',
        zoomMaxHeight: '80%',
        overlayColor: 'var(--primary)', 
        overlayOpacity: '1',
        iconShow: true,
        iconSize: '45px',
        iconImg: 'data:image/png;base64,',
        iconPos: {right: 0, bottom: 0 },
        iconToggleOnly: true,
        dynamicLoading: false,
        dynamicInterval: 200
    });
});
{{/js}}